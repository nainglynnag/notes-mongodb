          <button
            type="button"
            class="p-2 hover:bg-gray-100 rounded-full"
            title="Archive"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
              ></path>
            </svg>
          </button>

          <button
            type="button"
            id="modalMoreOptionsBtn"
            class="p-2 hover:bg-gray-100 rounded-full relative"
            title="More"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"
              ></path>
            </svg>
            <div
              id="modalMoreOptionsMenu"
              class="w-30 bg-white text-start flex flex-col absolute -top-15 left-5 hidden rounded-lg shadow-lg z-50"
            >
              <a
                id="addLabelBtn"
                class="text-sm px-2 py-1 border-b border-b-gray-200 hover:bg-gray-200 cursor-pointer"
                >add label</a
              >
              <a
                id="discardBtn"
                class="text-red-500 text-sm px-2 py-1 border-b border-b-gray-200 hover:bg-gray-200 cursor-pointer"
                >Discard</a
              >
            </div>
          </button>
        </div>

        <div class="flex items-center space-x-2">
          <button
            type="button"
            id="closeCreator"
            onclick="closeNoteModal()"
            class="px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded"
          >
            Close
          </button>
          <button
            type="submit"
            id="saveNoteBtn"
            class="px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded cursor-pointer active:scale-90 transition-all duration-200"
          >
            Save
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
