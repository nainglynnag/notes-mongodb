      <div id="modalTagsContent" class="mb-4">
        <div id="modalTagsList" class="flex flex-wrap gap-1"></div>
        <input
          id="newTagInput"
          type="text"
          placeholder="tag name"
          class="bg-gray-50/50 text-xs mt-1 px-2 py-1 rounded border border-gray-200 focus:outline-none hidden"
        />
      </div>

      <div
        class="flex items-center justify-between p-2 border-t border-gray-200"
      >
        <div class="flex space-x-1 items-center">
          <button
            type="button"
            id="modalColorPickerBtn"
            class="p-2 rounded-full hover:bg-gray-100 relative group"
            title="Background color"
          >
            <span id="modalSelectedColor">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-palette"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3m4 3a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3M5.5 7a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m.5 6a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3"
                />
                <path
                  d="M16 8c0 3.15-1.866 2.585-3.567 2.07C11.42 9.763 10.465 9.473 10 10c-.603.683-.475 1.819-.351 2.92C9.826 14.495 9.996 16 8 16a8 8 0 1 1 8-8m-8 7c.611 0 .654-.171.655-.176.078-.146.124-.464.07-1.119-.014-.168-.037-.37-.061-.591-.052-.464-.112-1.005-.118-1.462-.01-.707.083-1.61.704-2.314.369-.417.845-.578 1.272-.618.404-.038.812.026 1.16.104.343.077.702.186 1.025.284l.028.008c.346.105.658.199.953.266.653.148.904.083.991.024C14.717 9.38 15 9.161 15 8a7 7 0 1 0-7 7"
                />
              </svg>
            </span>
            <div
              id="modalColorBar"
              class="flex items-center gap-2 absolute -top-8 left-0 hidden z-50 backdrop-blur-sm p-1 rounded"
            >
              <span
                class="size-5 note-white rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-white"
              ></span>
              <span
                class="size-5 note-yellow rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-yellow"
              ></span>
              <span
                class="size-5 note-green rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-green"
              ></span>
              <span
                class="size-5 note-blue rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-blue"
              ></span>
              <span
                class="size-5 note-pink rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-pink"
              ></span>
              <span
                class="size-5 note-orange rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-orange"
              ></span>
              <span
                class="size-5 note-purple rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-purple"
              ></span>
              <span
                class="size-5 note-teal rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-teal"
              ></span>
              <span
                class="size-5 note-gray rounded-full border border-gray-500 cursor-pointer hover:scale-125"
                data-color="note-gray"
              ></span>
            </div>
          </button>

