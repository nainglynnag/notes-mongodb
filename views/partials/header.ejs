<header class="border-b border-gray-200 px-4 py-3 sticky top-0 bg-white z-50">
  <div class="w-11/12 mx-auto flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <button id="sidebarToggle" class="p-2 rounded-full hover:bg-gray-100 block ">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <h1 class="text-xl font-medium text-gray-700">Notes</h1>
    </div>

    <div class="flex items-center space-x-2">
      <div class="relative flex-1 max-w-2xl">
        <input type="text" placeholder="Search your notes..."
          class="w-full pl-10 pr-4 py-2 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white" />
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>

