<!-- Header -->
<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-4xl mx-auto px-4 py-4">
  <div class="flex items-center justify-between">
  <div class="flex items-center space-x-4">
        <button
          onclick="history.back()"
          class="p-2 hover:bg-gray-100 rounded-full cursor-pointer active:scale-90 transition-all duration-200"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
        </button>
        <h1 class="text-2xl font-semibold text-gray-900">Profile Settings</h1>
      </div>
      <button type="submit" form="updateForm"
        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 cursor-pointer active:scale-90 transition-all duration-200"
      >
        Save Changes
      </button>
    </div>
  </div>
</header>

  <% if (typeof error !== 'undefined' && error) { %>
  <div id="flashError" class="mt-4 text-sm text-red-600 text-center">
    <%= error %>
  </div>
  <% } %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="space-y-6">
    <!-- Profile Overview Card -->
    <div
      class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden"
    >
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900">Profile Overview</h2>
        <p class="text-sm text-gray-600">Your basic account information</p>
      </div>

      <div class="p-6">
  <form id="updateForm" method="POST" action="/account/update" class="flex items-start space-x-6">
          <!-- Avatar Section -->
          <div class="flex-shrink-0">
            <% if (userData.avatar && userData.avatar.length > 0) { %>
            <img
              class="w-24 h-24 rounded-full object-cover ring-4 ring-gray-100"
              src="<%= userData.avatar %>"
              alt="Profile Avatar"
            />
            <% } else{ %>
            <div
              class="size-20 bg-gradient-to-r from-gray-600 to-stone-500 rounded-full object-cover ring-4 ring-gray-100 text-2xl font-bold text-white text-center flex items-center justify-center"
            >
              <%= userData.name.split(" ").map((n) =>
              n[0]).join("").toUpperCase() %>
            </div>
            <% } %>

            <button
            type="button"
              class="mt-2 text-sm text-blue-600 hover:text-blue-800 font-medium cursor-pointer"
            >
              Change Photo
            </button>
          </div>

          <!-- Basic Info -->
          <div class="flex-1 space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1"
                  >Full Name</label
                >
                <input id="name" name="name" class="p-3 bg-gray-50 text-gray-900 rounded-lg border border-gray-200" value="<%= userData.name %>" required>
                  
                </input>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1"
                  >Email Address</label
                >
                <input name="email" id="email" class="p-3 bg-gray-50 text-gray-900 rounded-lg border border-gray-200" value="<%= userData.email %>" required>
                  
                </input>
              </div>
            </div>

            
          </div>
        </form>
      </div>
    </div>

    <!-- Preferences Card -->
    <div
      class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden"
    >
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900">App Preferences</h2>
        <p class="text-sm text-gray-600">Customize your notes experience</p>
      </div>

      <div class="p-6 space-y-6">
        <!-- Default Background Color -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Default Note Color</label
          >
          <div class="flex items-center space-x-3">
            <div
              class="w-8 h-8 rounded-full <%= userData.preferences.defaultBackgroundColor %> border-2 border-gray-300 ring-2 ring-blue-500"
            ></div>
            <span class="text-gray-900">Yellow</span>
            <button
              class="text-blue-600 hover:text-blue-800 text-sm font-medium ml-auto"
            >
              Change
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-1">
            New notes will use this color by default
          </p>
        </div>

        <!-- Grid View -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Grid Layout</label
          >
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="flex space-x-1">
                <div class="w-3 h-4 bg-gray-300 rounded-sm"></div>
                <div class="w-3 h-3 bg-gray-300 rounded-sm"></div>
                <div class="w-3 h-5 bg-gray-300 rounded-sm"></div>
              </div>
              <span class="text-gray-900">Masonry</span>
            </div>
            <button
              class="text-blue-600 hover:text-blue-800 text-sm font-medium"
            >
              Change
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-1">
            How your notes are arranged on the screen
          </p>
        </div>

        <!-- Dark Mode -->
        <div>
          <div class="flex items-center justify-between">
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Dark Mode</label
              >
              <p class="text-xs text-gray-500 mt-1">Switch to dark theme</p>
            </div>
            <div class="flex items-center">
              <button
                class="relative inline-flex h-6 w-11 items-center rounded-full bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              >
                <span
                  class="inline-block h-4 w-4 transform rounded-full bg-white shadow-lg ring-0 transition-transform translate-x-1"
                ></span>
              </button>
            </div>
          </div>
        </div>

        <!-- Font Size -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Font Size</label
          >
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <span class="text-base text-gray-900">Aa</span>
              <span class="text-gray-900">Medium</span>
            </div>
            <button
              class="text-blue-600 hover:text-blue-800 text-sm font-medium"
            >
              Change
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-1">Text size in your notes</p>
        </div>
      </div>
    </div>

